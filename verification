Question 1 

from sympy import *
april_sales = 48
may_sales = april_sales / 2
total_sales = april_sales + may_sales
assert total_sales == 72
print(f"Verification Success: {total_sales} clips.")
# output: Verification Success: 72.0 clips.

Question 2

from sympy import *
hourly_rate = 12
minutes_worked = 50
rate_per_minute = Rational(hourly_rate, 60)
total_earnings = minutes_worked * rate_per_minute
assert total_earnings == 10
print(f"Verification Success: ${float(total_earnings)}")
# output: Verification Success: $10.0

Question 3

from sympy import *
days = 5
regular_hours_limit = 8
total_daily_hours = 10
base_rate = 18
overtime_rate = base_rate + Rational(base_rate, 2)
overtime_hours = total_daily_hours - regular_hours_limit

weekly_regular = days * regular_hours_limit * base_rate
weekly_overtime = days * overtime_hours * overtime_rate
grand_total = weekly_regular + weekly_overtime

# Verification assert
assert grand_total == 990
print(f"Verification Success: Total weekly pay is ${grand_total}")
# output: Verification Success: Total weekly pay is $990
